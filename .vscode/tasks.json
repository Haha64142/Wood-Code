{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure with CMake",
      "type": "shell",
      "command": "cmake -S . -B build -G Ninja",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Debug Build",
      "type": "shell",
      "command": "cmake --build build",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Release Build",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release -G Ninja; cmake --build build",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Clean Build Files",
      "type": "shell",
      "command": "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue build/",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
