{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Debug Build",
      "type": "shell",
      "command": "bash",
      "args": ["./build.sh", "--cmake-build", "Debug"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Release Build",
      "type": "shell",
      "command": "bash",
